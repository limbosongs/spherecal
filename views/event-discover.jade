extends layout

block head

    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description', content='')
    meta(name='author', content='')
    link(rel='shortcut icon', href='#{pathToAssets}/assets/ico/favicon.png')
    title Discover Events
    // Bootstrap core CSS
    link(href='/css/bootstrap.css', rel='stylesheet')
    link(href='/css/bootstrap-editable.css', rel='stylesheet')

    script(src='http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js')

    script(src='http://malsup.github.com/jquery.form.js')


block body

  for event in results



    .container
      .well.col-xs-8.col-sm-8.col-md-8.col-lg-8.col-xs-offset-2.col-sm-offset-2.col-md-offset-2.col-lg-offset-2
        .row.user-row
          .col-xs-3.col-sm-2.col-md-1.col-lg-1
            img.img-circle(src='https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=50', alt='User Pic')
          .col-xs-8.col-sm-9.col-md-10.col-lg-10
            strong #{event.name}
            br
            span.text-muted User level: Administrator
          .col-xs-1.col-sm-1.col-md-1.col-lg-1.dropdown-user(data-for='.cyruxx')
            i.glyphicon.glyphicon-chevron-down.text-muted
        .row.user-infos.cyruxx
          .col-xs-12.col-sm-12.col-md-10.col-lg-10.col-xs-offset-0.col-sm-offset-0.col-md-offset-1.col-lg-offset-1
            .panel.panel-primary
              .panel-heading
                h3.panel-title User information
              .panel-body
                .row
                  .col-md-3.col-lg-3.hidden-xs.hidden-sm
                    img.img-circle(src='https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=100', alt='User Pic')
                  .col-xs-2.col-sm-2.hidden-md.hidden-lg
                    img.img-circle(src='https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=50', alt='User Pic')
                  .col-xs-10.col-sm-10.hidden-md.hidden-lg
                    strong Cyruxx
                    br
                    dl
                      dt User level:
                      dd Administrator
                      dt Registered since:
                      dd 11/12/2013
                      dt Topics
                      dd 15
                      dt Warnings
                      dd 0
                  .col-md-9.col-lg-9.hidden-xs.hidden-sm
                    strong Cyruxx
                    br
                    table.table.table-user-information
                      tbody
                        tr
                          td User level:
                          td Administrator
                        tr
                          td Registered since:
                          td 11/12/2013
                        tr
                          td Topics
                          td 15
                        tr
                          td Warnings
                          td 0
              .panel-footer
                button.btn.btn-sm.btn-primary(type='button', data-toggle='tooltip', data-original-title='Send message to user')
                  i.glyphicon.glyphicon-envelope
                span.pull-right
                  button.btn.btn-sm.btn-warning(type='button', data-toggle='tooltip', data-original-title='Edit this user')
                    i.glyphicon.glyphicon-edit
                  button.btn.btn-sm.btn-danger(type='button', data-toggle='tooltip', data-original-title='Remove this user')
                    i.glyphicon.glyphicon-remove
                          td 11/12/2013
                        tr
                          td Topics
                          td 15
                        tr
                          td Warnings
                          td 0

